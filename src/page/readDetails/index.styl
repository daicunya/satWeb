@import "../common/css/mixin.styl";

section
  height: 80vh
  //margin: 0
.read-list
  position: fixed
  top: 0
  left: 0
  z-index: 1
  background-color: #fff
.exer-cnt
  border-box()
  margin-top: 5rem;
  width: 100%
  padding: 0 1rem
  overflow: hidden
/*
  原文
*/
.read-original
  &>h3
  &>h5
  .read-wrap
    div
    p
      font-family: "Times New Roman"
  &>h3
    padding: .5rem 0
    font-size: 1.8rem
    font-weight: 600
  &>h5
    padding: .7rem 0
    font-size: 1.6rem
    font-style: italic
    font-weight: 400
  .read-wrap
    div
    p
    span
      font-size: 1.6rem
      line-height: 2rem;
    .read-line
      padding-right: .5rem;
      p
        font-size: 1.4rem
.read-ti
  height: 100%
  .read-question
    margin-bottom: 1rem;
    &>span
    &>div
    p
      font-family: "Times New Roman"
      font-size: 1.6rem
      font-weight: 200
    &>span
      margin-right: .5rem;
  .select-wrap
    margin-bottom: 1.5rem;
    .read-li
      line-height: 1.6rem;
      margin-bottom: .7rem;
      .read-select
        width: .9rem
        height: .9rem
        margin-top: .4rem
        border: 1px solid #40b0ef
        border-radius(50%)
        &.active
          background-color: #40b0ef
      .read-answer
        margin-left: 2rem;
        font-size: 1.6rem
        font-family: "Times New Roman"
        p
        span
          line-height: 2rem;
          font-size: 1.6rem
  .math-gap
    margin-bottom: 1.5rem;
    &>input
      width: 60%
      height: 2rem
      border: 1px solid #ccc
      font-size: 1.4rem
  .math-panel
    position: fixed
    left: 50%
    top: 50%
    margin-left: -9rem;
    margin-top: -12rem;
    //trans-xy(-50%,-50%)
    background-color: #fff
    box-shadow(0,0,10px,#ccc)
    z-index: 9
    display: none
    &.active
      display: block
    &>table
      border: 1px solid #ccc
      color: #40b0ef
      th
        height: 2rem
        &.math-value
          border-right: 1px solid #ccc
          color: #000
          font-weight: 400
          text-align: center
        button
          color: #40b0ef
          font-size: 1.4rem
      td
        padding: 1.5rem
        line-height: 2rem
        text-align: center
        border: 1px solid #ccc
  .read-progress
    margin-bottom: 1.5rem;
    p
      font-size: 1.4rem
      &.read-check
        padding: .3rem .5rem
        border: 1px solid #ddd
        border-radius(1rem)
        font-size: 1.2rem
      &.active
        background-color: #40b0ef
        color: #fff
        border-color: #40b0ef
      span
        color: #999
        font-size: 1.4rem
  .read-analytic
    background-color: #f5f5f5
    padding: 1rem .5rem
    &.active
      display: none
    p
    div
      line-height: 1.6rem;
      font-size: 1.4rem
      font-family: "Times New Roman"
    &>p
      margin-bottom: .7rem;
      span
        padding-left: .5rem;
        color: #40b0ef
  .read-footer
    b-top-1px(#ddd)
    position: fixed
    bottom: 0
    left: 0
    width: 100%
    display: flex
    l-height(4rem)
    background-color: #fff
    z-index: 2
    &>div
      flex: 1
      text-align: center
@media only screen and (min-width: 320px)
  .read-original
    .read-wrap
      div
      p
        font-size: 1.2rem!important
        span
          font-size: 1.2rem!important
@media only screen and (min-width: 360px)
  .read-original
    .read-wrap
      div
      p
        font-size: 1.4rem!important
        span
          font-size: 1.4rem!important
@media only screen and (min-width: 412px)
  .read-original
    .read-wrap
      div
      p
        font-size: 1.6rem!important
        span
          font-size: 1.6rem!important