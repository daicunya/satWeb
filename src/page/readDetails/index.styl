@import "../common/css/mixin.styl";

section
  position: absolute
  width: 100%
  height: 100%
  top: 0
  margin: 0
  padding-bottom: 7rem
.read-list
  position: fixed
  top: 0
  left: 0
  z-index: 1
  background-color: #fff
.exer-cnt
  border-box()
  margin-top: 5rem;
  width: 100%
  padding: 0 1rem
  overflow: hidden
/*
  原文
*/
.read-original
  &>h3
  &>h5
  .read-wrap
    div
    p
      font-family: "Times New Roman"
  &>h3
    padding: .5rem 0
    font-size: 1.8rem
    font-weight: 600
  &>h5
    padding: .7rem 0
    font-size: 1.6rem
    font-style: italic
    font-weight: 400
  .read-wrap
    div
    p
    span
      font-size: 1.6rem
      line-height: 2rem;
    .read-line
      padding-right: .5rem;
      p
        font-size: 1.4rem
    .read-cnt
      img
        width: 100%!important
/*
  题目
*/
.read-ti
  height: 100%
  .read-question
    min-height: 1.8rem
    margin-bottom: 1rem
    &>span
    &>div
    p
      font-family: "Times New Roman"
      font-size: 1.6rem
      font-weight: 200
      &>span
        font-family: "Times New Roman"
        font-size: 1.6rem
        margin-right: .5rem
    img
      width: auto
  .select-wrap
    margin-bottom: 1.5rem
    .read-li
      line-height: 1.6rem
      margin-bottom: .7rem
      .read-select
        width: .9rem
        height: .9rem
        margin-top: .4rem
        border: 1px solid #40b0ef
        border-radius(50%)
        &.active
          background-color: #40b0ef
      .read-answer
        margin-left: 2rem;
        font-size: 1.6rem
        font-family: "Times New Roman"
        p
        span
          line-height: 2rem;
          font-size: 1.6rem
  .math-gap
    margin-bottom: 1.5rem;
    &>input
      width: 60%
      height: 2rem
      padding-left: 1rem
      border: 1px solid #ccc
      font-size: 1.4rem
  .textarea-gap
    display: none
    &>textarea
      width: 98%;
      height: 20rem;
      border: 1px solid #ccc;
      font-size: 1.4rem
  .math-panel
    position: fixed
    left: 50%
    top: 50%
    margin-left: -9rem;
    margin-top: -12rem;
    //trans-xy(-50%,-50%)
    background-color: #fff
    box-shadow(0,0,10px,#ccc)
    z-index: 9
    display: none
    &.active
      display: block
    &>table
      border: 1px solid #ccc
      color: #40b0ef
      th
        height: 2rem
        &.math-value
          border-right: 1px solid #ccc
          color: #000
          font-weight: 400
          text-align: center
        button
          color: #40b0ef
          font-size: 1.4rem
      td
        padding: 1.5rem
        line-height: 2rem
        text-align: center
        border: 1px solid #ccc
  .read-progress
    margin-bottom: 1.5rem;
    p
      font-size: 1.4rem
      &.read-check
        padding: .3rem .5rem
        border: 1px solid #40b0ef
        border-radius(1rem)
        font-size: 1.2rem
        &.active
          background-color: #40b0ef
          color: #fff
      span
        color: #999
        font-size: 1.4rem
    i
      margin: 2px 2rem 0 0
      font-size: 1.3rem
      &.active
        color: #40b0ef
  .read-analytic
    background-color: #f5f5f5
    padding: 1rem .5rem
    display: none
    &.active
      display: block
    p
    div
      line-height: 1.6rem;
      font-size: 1.4rem
      font-family: "Times New Roman"
    &>p
      margin-bottom: .7rem;
      span
        padding-left: .5rem;
        color: #40b0ef
  .read-footer
    b-top-1px(#ddd)
    position: fixed
    bottom: 0
    left: 0
    width: 100%
    display: flex
    l-height(4rem)
    background-color: #fff
    z-index: 9
    &>div
      flex: 1
      text-align: center
      &>i
        padding-right: .5rem;
/*
  弹窗
*/
.read-window
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 9
  background-color: rgba(0,0,0,.6)
  display: none
  .read-win-wrap,
  .read-win-out
    position: absolute
    width: 60%
    top: 50%
    left: 50%
    trans-xy(-50%,-50%)
    padding: 2rem
    border-radius(1rem)
    color: #fff
    font-size: 1.4rem
    text-align: center
    background-color: #fff
    display: none
    p
      margin-bottom: 1rem;
      color: #40b0ef
      &.read-win-text
        line-height: 1.8rem;
      &:nth-child(2)
        font-size: 2.4rem
      &.read-win-continue
        position: fixed
        bottom: -2rem
        left: 0
        width: 100%
        l-height(3rem)
        text-align: center
        border-bottom-left-radius: 1rem
        border-bottom-right-radius: 1rem
        background-color: #40b0ef
        color: #fff
      i
        padding-right: .5rem;
  .read-win-out
    p
      padding-bottom: 2rem;
      margin-bottom: 0;
      font-size: 1.4rem
    .read-win-select
      position: fixed
      width: 100%
      display: flex
      margin-top: 2rem;
      bottom: 0
      left: 0
      color: #fff
      &>li
        flex: 1
        l-height(2.5rem)
        background-color: #40b0ef
        font-size: 1.4rem
        &:first-child
          border-bottom-left-radius: 1rem
          border-right: 1px solid #fff
          background-color: #ccc
        &:last-child
          border-bottom-right-radius: 1rem
@media only screen and (min-width: 320px)
  .read-original
    .read-wrap
      div
      p
        font-size: 1.2rem!important
        span
          font-size: 1.2rem!important
@media only screen and (min-width: 360px)
  .read-original
    .read-wrap
      div
      p
        font-size: 1.4rem!important
        span
          font-size: 1.4rem!important
@media only screen and (min-width: 412px)
  .read-original
    .read-wrap
      div
      p
        font-size: 1.6rem!important
        span
          font-size: 1.6rem!important