@import "../common/css/mixin.styl";

section
  margin-top: 0;
.p-index-wrap
  margin-top: 1rem
.p-index-title
  padding: 0 1.1rem
  border-left: 4px solid #40b0ef
  font-size: 1.6rem
  color: #40b0ef
  &>a
    color: #666
    font-size: 1.2rem
    i
      padding-left: .5rem
.p-index-ul
  margin-top: .5rem
  padding: 0 .5rem
  overflow: hidden
/**
  导航
**/
.home-nav
  width: 100%
  padding: 10px 0
  box-shadow(0 3px 3px #ddd)
  .stair
    padding: 0 10% 0 2%
    ul
      display: flex
      align-items: center
      li
        flex: 1
        text-align: center
        &:first-child
          width: 30px
          height: 30px
        &.eng
          padding-top: 2px;
  .second
    width: 100%
    margin-top: 1.6rem;
    ul
      display: flex
      align-items: center
      justify-content: center
      li
        flex: 1
        text-align: center
        div
          width: 2.8rem
          height: 2.8rem
          line-height: 3rem;
          margin: 0 auto
          border: 1px solid #40b0ef
          border-radius(50%)
          text-align: center
          i
            font-size: 1.7rem
            color: #40b0ef
        p
          padding-top: .5rem;
          font-size: 1.2rem
/**
  内容区
**/
.home
  overflow: hidden
  //公开课
  .pubClass
    .pubClass-cnt
      .item
        float: left
        width: 24%
        margin-right: 1.3%
        &:last-child
          margin-right: 0
        &>a
          overflow: hidden
          display: block
          &>div
            width: 100%
            height: 10rem
          img
            width: 100%
            height: 100%
          p
            lind-two()
  //做题系统
  .topic
    .topic-cnt
      .item
        float: left
        width: 49%
        height: 10rem
        margin: 0 2% .7rem 0
        position: relative
        &:nth-child(2n)
          margin-right: 0
        &:after
          position: absolute
          content: ''
          display: block
          top : 0
          left : 0
          width: 100%
          height: 100%
          background-color: rgba(0,0,0,.4)
        img
          width: 100%
          height: 100%
        .topic-icon
          position: absolute
          top: 50%
          left: 50%
          trans-xy(-50%,-50%)
          color: #fff
          z-index: 8
          text-align: center
          p
            font-size: 1.8rem
            &:first-child
              width: 3.5rem
              l-height(3.5rem)
              margin: 0 auto .5rem
              border: 1px solid #fff
              border-radius(50%)
  //推荐课程
  .course
    .course-cnt
      .item
        position: relative
        float: left
        overflow: hidden
        &:first-child
          width: 30%
          height: 15.3rem
          margin-right: 1%
        &:nth-child(2)
          width: 68%
          height: 7.5rem
          margin-bottom: 1%
        &:nth-child(3),
        &:nth-child(4)
          width: 33%
          height: 7.5rem
        &:nth-child(3)
          margin-right: 1.5%
        img
          width: 100%
          height: 100%
        p
          position: absolute
          left: 0
          bottom: 0
          width: 100%
          l-height(2.5rem)
          text-align: center
          background-color: #40b0ef
          color: #fff
        &:nth-child(2)
          p
            background-color: #c490bf
        &:nth-child(3)
          p
            background-color: #ec6941
        &:nth-child(4)
          p
            background-color: #32b16c
  //名师团队
  .teacher
    .teacher-cnt
      padding: 0
      .item
        overflow: hidden
        &>a
          position: relative
          display: block
          width: 100%
          height: 100%
          float: left
          margin: 0 1%
          p
            position: absolute
            left: 0
            bottom: 0
            width: 100%
            l-height(3rem)
            text-align: center
            background-color: #40b0ef
            color: #fff
            font-size: 1.2rem
    .point
      display: none
  //文章资讯
  .info
    .info-nav
      padding: 0 .5rem
      display: flex
      &>a
        flex: 1
        l-height(3rem)
        text-align: center
        font-size: 1.4rem
        &:first-child
          b-bottom-1px(#40b0ef)
    .info-wrap
      padding: 0 .5rem
      &>li
        margin-bottom: .5rem
        &>a
          display: flex
          padding: .5rem 0
        .p-info-img
          width: 8rem
          height: 5rem
          margin-right: 1rem
          overflow: hidden
          background-color: #999
          img
            width: 100%
            height: 100%
        .p-info-text
          position: relative
          display: block
          flex: 1
          &>h2
            height: 4rem
            line-height: 2rem
            font-size: 1.5rem
            font-weight: normal
            color: #1a1a1a
            lind-two()
          .p-ic-wrap
            width: 100%;
            line-height: 1.1;
            color: #888;
            font-size: .22rem;
            position: relative
            bottom: 0