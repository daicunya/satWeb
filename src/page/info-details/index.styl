@import "../common/css/mixin.styl";

.info-wrap
  padding: .5rem 1rem
  overflow: hidden
  .info-img
    position: relative
    width: 100%
    height: 14rem
    overflow: hidden
    background-color: #999
    img
      width: 100%
      height: 100%
    &>p
      border-box()
      width: 100%
      position: absolute
      left: 0
      bottom: .5rem
      padding: 0 1rem
      color: #fff
      font-size: 1.2rem
      color: #fff
      i
        padding-right: .5rem;
  &>h1
    line-height: 2.4rem
    font-size: 1.6rem
    text-align: center
  .info-abstract
    padding: .5rem
    margin-bottom: .8rem;
    background-color: #f4f4f4
    color: #434343
    em
      color: #f5791e
      font-style: normal
  .info-article
    line-height: 1.6rem;
    font-size: 1.2rem
    color: #434343
    p,
    span
      font-size: 1.2rem!important
  .info-extend
    margin-top: 2rem;
    .info-cate
      display: flex
      padding-bottom: .5rem;
      margin-bottom: .5rem;
      b-bottom-1px(#666)
      p,
      a
        flex: 1
      p
        font-size: 1.6rem
        color: #40b0ef
      a
        text-align: right
        color: #666
        i
          padding-left: .5rem;
          font-size: 1.4rem
    .info-extend-list
      .info-extend-item
        &>a
          display: block
          line-height: 1.6rem;
          overflow: hidden
          -ms-text-overflow: ellipsis
          text-overflow: ellipsis
          white-space: nowrap
          color: #434343
          font-size: 1.2rem
