@import "../common/css/mixin.styl";

.report-img
  width: 10rem
  height: 10rem
  overflow: hidden
  margin: 5rem auto 2rem
  img
    width: 100%
    height: 100%
.report-correct
  display: flex
  &>li
    flex: 1
    text-align: center
    font-size: 1.4rem
    color: #40b0ef
    &>i
      padding-right: .5rem
    span
      padding-left: .5rem
      font-size: 1.4rem
      color: #000
.report-cmn
  margin-top: 1rem;
  padding: 1rem 0
  background-color: #e0dede
  li
    display: inline-block
    margin: 1rem
    width: 2rem
    l-height(2rem)
    text-align: center
    border-radius(50%)
    font-size: 1.4rem
    color: #fff
    //background-color: #16b70e
    //background-color: #898989
    //background-color: #ff0000
    &.wrong
      background-color: #ff0000
    &.empty
      background-color: #898989
    &.correct
      background-color: #16b70e
.report-mock
  position: relative
  width: 100%
  overflow: hidden
  .report-mock-wrap
    width: 400%
    transition(all 1s)
    .report-list
      float: left
      .report-head
        letter-spacing: 1.2rem
        font-size: 1.6rem
        text-align: center
        color: #40b0ef
.report-bottom
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  background-color: #40b0ef
  a
    display: inline-block
    l-height(4rem)
    text-align: center
    width: 100%
    color: #fff
    font-size: 1.4rem