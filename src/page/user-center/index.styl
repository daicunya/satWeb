@import "../common/css/mixin.styl";

.user-center
  width: 100%
  height: 100%
  background-color: #f5f5f5
  .wrap
    padding-top: 1rem;
    .user-list
      margin: 1rem 0
      overflow: hidden
      .user-item
        margin-top: .1rem
        font-size: 1.4rem
        color: #333
        background-color: #fff
        .user-wrap
          display: block
          padding: 1.5rem 2rem 1.5rem 1rem
          .icon-left
            padding-right: .5rem;
            color: #40b0ef
            font-size: 1.8rem
          .icon-right
            float: right;
            font-size: 1.6rem