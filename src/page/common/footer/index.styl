.footer
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  background-color: #fff
  z-index: 9
.footer-list
  display: flex
  align-items: center
  justify-content: center
  margin: .75rem 0
  li
    display: inline-block
    padding: 0 4px
    border-right: 1px solid #333
    &:last-child
      border-right: none
    a
      color: #333
      font-size: .6rem
.footer-nav
  width: 100%
  display: flex
  padding: .6rem 0
  b-top-1px(#ddd)
  li
    flex: 1
    text-align: center
    i
      font-size: 2.2rem
      f-color()
    a
      font-size: .8rem
      color: #999