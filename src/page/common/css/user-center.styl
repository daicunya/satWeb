@import "../common/css/mixin.styl";

.user-wrap
  overflow: hidden
.user-list
  display: none
  padding-top: 1rem
  &:first-child
    display: block
  .user-title
    padding-left: 1.1rem;
    border-left: 4px solid #40b0ef;
    font-size: 1.6rem;
    color: #40b0ef;
  .user-item
    position: relative
    display: flex
    padding: .5rem 1rem
    margin: .5rem 0
    background-color: #f5f5f5
    align-items: center
    -webkit-transform: translateX(0)
    &:first-child
      margin-top: 0
    .user-text
      flex: 9
      font-size: 1.2rem
      h3
        l-height(2rem)
        color: #333
      p
        color: #666
    .user-report
      flex: 2
      padding: .5rem
      background-color: #40b0ef
      color: #fff
      border-radius(1rem)
      text-align: center
    .user-delete
      position: absolute
      top: 0
      right: -5rem
      width: 5rem
      height: 100%
      text-align: center
      background-color: red
      color: #fff
.p-page
  margin: 2rem 0 1rem 0;
  display: flex
  align-items center
  li
    flex: 1
    text-align: center
    font-size: 1.2rem
    &.p-pos
      font-size: 1.3rem