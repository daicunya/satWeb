@import "../common/css/mixin.styl";

.register
  .container
    width: 90%;
    margin: 6rem auto 0;
    padding: 2rem 0;
    border-radius: 2px;
    background-color: #ccc
    .in-box
      width: 90%
      margin: 0 auto
      .reg-info
        ul
          margin-top: 2rem;
          li
            position: relative
            i
              position: absolute
              top: 1rem
              left: 1rem
              color: #999
              font-size: 1.8rem
            input[type='text'],
            input[type='password']
              width: 87%;
              l-height(3.5rem)
              padding-left: 3rem;
              border: none;
              border-bottom: 1px #434343 solid;
            input[type='button']
              position: absolute
              top: 0
              right: 0
              width: 8rem;
              height: 3.6rem
              background: #40b0ef
              border: none
              color: white
              border-radius: 3px
              padding: 5px
            .validform-checktip
              margin-left: .8rem;
              l-height(2rem)
              overflow: hidden;
              color: #999;
              font-size: 1.2rem;
            .validform-wrong
              color: red;
              padding-left: 20px;
              white-space: nowrap;
            //background: url(../images/error.png) no-repeat left center;
      .reg-btn
        margin-top: 1rem;
        margin-bottom: 1rem;
        input[type='button']
          width: 100%;
          height: 4rem;
          background: #40b0ef;
          color: white;
          border-radius: 5px;
          border: none;
          font-size: 1.2em;
        p
          margin-top: 1rem;
          text-align: center
          a
            color: #40b0ef