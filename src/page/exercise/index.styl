@import "../common/css/mixin.styl";

.exer-cnt-item
  .exer-dl
    margin-top: 2rem;
    &>dt
      padding-left: 1.1rem
      border-left: 4px solid #40b0ef
      font-size: 1.6rem
      f-color()
    &>dd
      padding: 0 1.5rem
      margin-bottom: .1rem;
      overflow: hidden
      background-color: #f5f5f5
      font-size: 0
      &>.j-inner-div
        width: 100%
        l-height(3rem)
        & span
          font-size: 1.4rem
      &>.inner-list
        display: none
        &.active
          display: block
        &>li
          padding: .4rem 1.5rem
          background-color: #ccc
          a
            font-size: 1.4rem