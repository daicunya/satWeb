@import "../common/css/mixin.styl";

.loginBox
  width: 90%;
  margin: 6rem auto 0;
  padding: 2rem 0;
  border-radius: 2px;
  background-color: #ccc
  .inBox
    width: 90%;
    margin: 0 auto;
    &>h2
      text-align: center;
      font-size: 1.8rem;
    &>ul
      margin-top: 2rem;
      li
        position: relative
        i
          position: absolute
          top: 1rem
          left: 1rem
          color: #999
          font-size: 1.8rem
        input[type='text'],
        input[type='password']
          width: 80%;
          l-height(3.5rem)
          padding-left: 3rem;
          border: none;
          border-bottom: 1px #434343 solid;
        .validform-checktip
          margin-left: .8rem;
          l-height(2rem)
          overflow: hidden;
          color: #999;
          font-size: 1.2rem;
        .validform-wrong
          color: red;
          padding-left: 20px;
          white-space: nowrap;
          //background: url(../images/error.png) no-repeat left center;
        &:last-child
          margin-top: 1rem;
          margin-bottom: 1rem;
          input[type='button']
            width: 100%;
            height: 4rem;
            background: #40b0ef;
            color: white;
            border-radius: 5px;
            border: none;
            font-size: 1.2em;
    .other-in
      width: 100%
      display: flex
      justify-content: space-between
      a
        flex: 1
        font-size: 1.2rem
        &:last-child
          text-align: right;
