@import "../common/css/mixin.styl";

.pubClass
  padding-top: 1rem;
  position: relative
  .pub-title
    padding-left: 1.1rem;
    border-left: 4px solid #40b0ef;
    font-size: 1.6rem;
    color: #40b0ef;
    font-weight: normal
  .pub-wrap
    padding: .5rem 1rem
    display: flex
    margin-bottom: .5rem;
    background-color: #f5f5f5
    .pub-img
      width: 6rem
      height: 8rem
      overflow: hidden
      margin-right: 1rem;
      background-color: #ccc
      img
        width: 100%
        height: 100%
    .pub-cnt
      flex: 1
      overflow: hidden
      &>h2
        line-height: 2rem
        font-size: 1.6rem
        font-weight: normal
        color: #1a1a1a
        overflow : hidden
        text-overflow: ellipsis
        display: -webkit-box
        -webkit-line-clamp: 2
        -webkit-box-orient: vertical
      &>p
        font-size: 1.2rem
        line-height: 1.8rem
        &:first-of-type
          white-space: nowrap
          overflow: hidden
          -ms-text-overflow: ellipsis
          text-overflow: ellipsis
      &>.pub-icon
        i
          padding-right: .5rem
      &>.apply
        margin-top: .5rem;
        a
          padding: .5rem 1rem
          text-align: center
          background-color: #40b0ef
          color: #fff
          border-radius(.5rem)
          &:first-child
            margin-right: 1rem;

