@import "../common/css/mixin.styl";

.eval-wrap
  width: 100%
  height: 100%
  background: url("../../../images/evaluation.png") center/100% 100% no-repeat;
  &>ul
    padding: 3rem 0
    li
      border-box()
      width: 75%
      margin: 0 auto 2rem
      padding: 5% 3rem
      text-align: center
      background-color: rgba(255,255,255,.4);
      color: #fff
      &:last-child
        margin-bottom: 0
      h2
        margin-bottom: .5rem
        font-size: 1.6rem
      p
        font-size: 1.2rem
      a
        display: block
        position: relative
        margin: 1rem auto 0
        width: 3rem
        l-height(3rem)
        border-radius(50%)
        font-size: 1.6rem
        background-color: #fff
        color: #3bc59f
        &:before
          position: absolute
          top: -2px
          left: -2px
          display: block
          content: ''
          width: 3.2rem
          height: 3.2rem
          border: 1px solid #fff
          border-radius(50%)