@import "../common/css/mixin.styl";

.teacher
  padding: 1rem
  position: relative
  .teacher-item
    margin-bottom: .5rem
    &>a
      display: flex
      padding: .5rem
      background-color: #f5f5f5
      .teacher-img
        width: 6rem
        height: 6rem
        margin-right: 1rem
        overflow: hidden
        background-color: #ccc
        border-radius(50%)
        img
          width: 100%
          height: 100%
      .teacher-wrap
        flex: 1
        &>h3
          line-height: 2rem
          font-size: 1.4rem
        &>p
          margin-bottom: .5rem;
          span
            padding-right: .3rem;
        &>.cnt
          color: #1a1a1a
          overflow : hidden
          text-overflow: ellipsis
          display: -webkit-box
          -webkit-line-clamp: 2
          -webkit-box-orient: vertical