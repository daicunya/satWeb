@import "../common/css/mixin.styl";

.course
  padding: 1rem
  position: relative
  .course-list
    .course-item
      position: relative
      margin-bottom: 1rem;
      padding: .5rem
      background-color: #f5f5f5
      &>a
        display: flex
        .course-img
          width: 13rem
          height: 10rem
          overflow: hidden
          margin-right: 1rem
          background-color: #ccc
          img
            width: 100%
            height:100%
        .course-text
          flex: 1
          h2
            height: 3.7rem
            margin-bottom: 1.2rem
            line-height: 2rem
            font-size: 1.6rem
            font-weight: normal
            color: #1a1a1a
            overflow : hidden
            text-overflow: ellipsis
            display: -webkit-box
            -webkit-line-clamp: 2
            -webkit-box-orient: vertical
          p
            l-height(2rem)
            overflow: hidden
            white-space: nowrap
            text-overflow: ellipsis
            &.details
              position: absolute
              left: 14rem
              bottom:.5rem
              width: 7rem
              text-align: center
              border-radius(5px)
              color: #fff