@import "../common/css/mixin.styl";

.teacher-details
  padding: 1rem
  position: relative
  .wrap
    padding: .5rem
    background-color: #f5f5f5
    .wrap-cnt
      display: flex
      overflow: hidden
      margin-bottom: 1rem
      .img
        width: 6rem
        height: 6rem
        border-radius(50%)
        overflow: hidden
        margin-right: 1rem
        background-color: #ccc
        img
          width: 100%
          height: 100%
      .name
        flex: 1
        h3
          padding: .3rem 0
          line-height: 2rem
          font-size: 1.4rem
          b-bottom-1px(#40b0ef)
        p
          margin-top: .5rem
    .text
      line-height: 1.6rem
  .appointment
    display: block
    l-height(3rem)
    margin-top: 1rem
    border-radius(8px)
    text-align: center
    color: #fff
  .course-title
    margin-top: 1.2rem
    padding-left: 1.1rem
    border-left: 4px solid #40b0ef
    font-size: 1.6rem
    color: #40b0ef
  .course
    margin-top: .5rem
    .course-list
      float: left
      width: 48%
      &:nth-child(2n+1)
        margin-right: 2%
      .course-img
        width: 100%
        height: 7rem
        background-color: #ccc
      &>p
        line-height: 2rem
        text-align: center